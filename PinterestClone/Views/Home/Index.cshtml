@{
    ViewData["Title"] = "Home Page";
}
@model PinterestClone.ViewModels.SearchViewModel

<div class="text-center">
    <h1 class="display-4">PINTEREST CLONE</h1>
</div>

<form role="search" asp-controller="Photos" asp-action="Search" class="form-inline my-2 my-sm-0" method="post">
    <input class="form-control mr-sm-2" asp-for="Tag" type="text" placeholder="Search" aria-label="Search">
    <button class="btn my-2 my-sm-0" type="submit">Search</button>
</form>