@{
    ViewData["Title"] = "Photo Details";
}
@using System.Collections.Generic;
@model PinterestClone.Models.Photo

<div class="text-center">
    <h1 class="display-4">Edit @Model.Title</h1>
</div>

<div class="photo-form">
  <form asp-controller="Photos" asp-action="Edit" method="post">
    <div class="form-group">
      <label for="Title">Title</label>
      <input class="form-control" type="text" id="Title" asp-for="Title" placeholder="@Model.Title"/>
    </div>
    <div class="form-group">
      <label for="Url">URL</label>
      <input class="form-control" type="text" id="Url" asp-for="Url" placeholder="@Model.Url"/>
    </div>
    <div class="form-group">
      <label for="taglist">Hashtags</label>
      <small class="form-text text-muted">Enter tags, separated by #</small>
      <input class="form-control" type="text" id="TagList" asp-for="TagList" placeholder="@Model.TagList"/>
    </div>
      <input  type="hidden" asp-for="PhotoId" value="@Model.PhotoId"/>
    <div class="form-group">
      <input type="submit" value="Edit your photo" class="btn" />
      <small class="form-text text-muted"><a asp-action="Index">Cancel</a></small>
    </div>
  </form>
</div>